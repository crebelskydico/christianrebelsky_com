---
export interface IFooterMenuProps {
  active: string
  variant: 'min' | 'max'
}
const { active } = Astro.props as IFooterMenuProps

// give it some collection to parse from
---

<footer class="col-span-full grid place-items-center row-start-3 row-end-4 py-4">
  <menu>
    <a
      href="/privacypolicy"
      class={`footer-menu-item pr-4 text-primary hover:underline ${
        active === 'datenschutz' ? 'underline' : ''
      }`}
      aria-current={`${active === 'datenschutz' ? 'page' : 'false'}`}
      >Datenschutz</a
    >
    <a
      href="/imprint"
      class={`footer-menu-item text-primary hover:underline ${
        active === 'impressum' ? 'underline' : ''
      }`}
      aria-current={`${active === 'impressum' ? 'page' : 'false'}`}>Impressum</a
    >
  </menu>
</footer>
